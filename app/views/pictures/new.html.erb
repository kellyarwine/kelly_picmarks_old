<%= link_to "Return to Pictures", all_pictures_url %>

		<h4>Add a new picture by filling out the form below.</h4>

		<%= form_tag all_pictures_url, :method => "post" do %>
			<%= label_tag :url, "URL:" %>
			<%= text_field_tag :url %>

			<%= label_tag :title, "Title:" %>
			<%= text_field_tag :title %>

			<%= submit_tag "Add Picture!"%>
			<%= link_to "or Cancel", all_pictures_url %>
		<% end %>

		<p>
